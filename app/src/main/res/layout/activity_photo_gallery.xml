<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_moon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photogallery"
        android:textStyle="bold"
        android:background="@color/offWhite"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/ic_cafe_1" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_cafe_2" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/ic_cafe_3" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/ic_cafe_4" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/ic_cafe_5" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/ic_cafe_6" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/ic_cafe_7" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="204dp"
            android:layout_height="124dp"
            android:layout_marginTop="10dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/ic_coffee" />

    </androidx.gridlayout.widget.GridLayout>


</androidx.appcompat.widget.LinearLayoutCompat>